@model SectionViewModel
@{
    ViewData["Title"] = "Create";
    var books = new SelectList(ViewBag.Books, "Id", "Name");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Add Section</h3>
    </div>
    <div asp-validation-summary="All"></div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Title" class="col-form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter Section Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="Book"></label>
                <select id="BookId" class="form-control" asp-items="books" asp-for="BookId">
                    <option value="@null">-----Select Book</option>
                </select>
                <span asp-validation-for="Book" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer text-right">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#BookId').select2({
                placeholder: 'Select or search a book',
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}